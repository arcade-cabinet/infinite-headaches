# Homestead Headaches Environment Configuration
# Copy this file to .env for local development

# App title shown in browser tab
VITE_APP_TITLE=HOMESTEAD HEADACHES

# Base path for assets (leave empty for root)
# VITE_PUBLIC_PATH=/

# ============================================================================
# Build Flags - Feature toggles for dev vs production builds
# ============================================================================

# Enable dev menu (backtick key to toggle)
# Shows level jumping, god mode, and other dev tools
# VITE_DEV_MENU=true

# Show debug info in HUD (FPS, entity counts, etc.)
# VITE_DEBUG_HUD=true

# Enable all characters without unlocking
# VITE_UNLOCK_ALL_CHARACTERS=true

# ============================================================================
# Notes:
# - For development, use .env.development (flags enabled)
# - For production builds, use .env.production (flags disabled)
# ============================================================================
